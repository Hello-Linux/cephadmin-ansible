# Synchronize the system time with the NTP server
[chrony]
ceph-01 ansible_host=192.168.98.130

[ceph_cluster]
# label: user-define label list. osd_devices: osd device list
ceph-01 ansible_host=192.168.98.130 deploy_role=main label=["_admin",'osd'] osd_devices=['/dev/sdb']
ceph-02 ansible_host=192.168.98.131 deploy_role=common label=['mon','mgr','osd','rgw'] osd_devices=['/dev/sdb']
ceph-03 ansible_host=192.168.98.132 deploy_role=common label=['mon','mgr','osd'] osd_devices=['/dev/sdb']


