# Synchronize the system time with the NTP server
[chrony]
ceph-01 ansible_host=192.168.124.20

[ceph_cluster]
# Label: user-define label list
# osd_devices: your osd device list
ceph-01 ansible_host=192.168.124.20 deploy_role=main label=["_admin",'mon','osd'] osd_devices="/dev/vdb,/dev/vdc"
ceph-02 ansible_host=192.168.124.21 deploy_role=common label=['mon','mgr','osd','rgw'] osd_devices="/dev/vdb,/dev/vdc"
ceph-03 ansible_host=192.168.124.22 deploy_role=common label=['mon','mgr','osd'] osd_devices="/dev/vdb,/dev/vdc"

[ceph_linux_client]
ceph-client01 ansible_host=192.168.124.10

